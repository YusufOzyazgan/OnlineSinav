
@{
    ViewData["Title"] = "EditExam";
}
<style>
    body {
        background-color: lightgray; /* Koyu gri */
    }
</style>
@model OnlineSinavPortali.ViewModels.ExamModel

<div class="container col-md-10 mt-3  justify-content-center align-items-center ">

    <div class="row">
        <form method="post" asp-action="EditExam">

            <h1 class="text-center"> Sınavı Düzenle</h1>
           
            <hr />
            <label id="SinifSeciniz">Sınıf Seçiniz :</label>

            <select id="UniversityDepartment" name="UniversityDepartment" class="form-control">
                <option value="Bilgisayar Programcılığı" selected="@((Model.UniversityDepartment == "Bilgisayar Programcılığı").ToString().ToLower())">Bilgisayar Programcılığı</option>
                <option value="Elektrik Elektronik" selected="@((Model.UniversityDepartment == "Elektrik Elektronik").ToString().ToLower())">Elektrik Elektronik</option>
                <option value="Harita Kadastro" selected="@((Model.UniversityDepartment == "Harita Kadastro").ToString().ToLower())">Harita Kadastro</option>
            </select>


            <br />

            <label id="DersAdi">Ders Adı:</label>
            <div>
                <select id="CourseName" name="CourseName" class="form-control">
                    <option value="Matematik" selected="@((Model.CourseName == "Matematik").ToString().ToLower())">Matematik</option>
                    <option value="Türkçe" selected="@((Model.CourseName == "Türkçe").ToString().ToLower())">Türkçe</option>
                    <option value="İngilizce" selected="@((Model.CourseName == "İngilizce").ToString().ToLower())">İngilizce</option>
                    <option value="Fizik" selected="@((Model.CourseName == "Fizik").ToString().ToLower())">Fizik</option>
                    <option value="Programlamanın Temelleri" selected="@((Model.CourseName == "Programlamanın Temelleri").ToString().ToLower())">Programlamanın Temelleri</option>
                    <option value="İnternet Programcılığı" selected="@((Model.CourseName == "İnternet Programcılığı").ToString().ToLower())">İnternet Programcılığı</option>
                    <option value="Veri Tabanı" selected="@((Model.CourseName == "Veri Tabanı").ToString().ToLower())">Veri Tabanı</option>
                    <option value="Web Tasarımı Temelleri" selected="@((Model.CourseName == "Web Tasarımı Temelleri").ToString().ToLower())">Web Tasarımı Temelleri</option>
                    <option value="GÖrsel Programlama" selected="@((Model.CourseName == "GÖrsel Programlama").ToString().ToLower())">GÖrsel Programlama</option>
                    <option value="Multimedya Uygulamaları" selected="@((Model.CourseName == "Multimedya Uygulamaları").ToString().ToLower())">Multimedya Uygulamaları</option>
                    <option value="Nesne Tabanlı Programlama" selected="@((Model.CourseName == "Nesne Tabanlı Programlama").ToString().ToLower())">Nesne Tabanlı Programlama</option>
                    <option value="İleri Programlama" selected="@((Model.CourseName == "İleri Programlama").ToString().ToLower())">İleri Programlama</option>
                </select>



            </div>

            <div class="mb-4">
                <label>Sınav Tarihi:</label>
                <input type="date" name="ExamDate1" class="form-control" value="@Model.ExamDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="mb-4">
                <label>Sınav Saati:</label>
                <input type="time" name="ExamTime" class="form-control" value="@Model.ExamDate.ToString("HH:mm")">
            </div>
             
            <input type="hidden" asp-for="ExamID" value="@Model.ExamID"/>
            <div class="mb-4">
                <input type="hidden" id="txtId" />
                <button class="btn btn-primary" type="submit" id="btnKaydet">Kaydet</button>

            </div>
            <div class="alert" id="sonuc"></div>

            

        </form>
    </div>
</div>
